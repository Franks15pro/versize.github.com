    <!-- Quick View Modal -->
    <div class="modal" id="quickViewModal">
        <div class="modal-content">
            <button class="modal-close" onclick="closeQuickView()">
                <i class="fas fa-times"></i>
            </button>
            
            <div class="modal-images">
                <img src="https://images.unsplash.com/photo-1551028719-00167b16eac5?w=600" alt="Produkt" class="modal-image">
                <img src="https://images.unsplash.com/photo-1562137369-1a1a0bc66744?w=600" alt="Produkt" class="modal-image">
