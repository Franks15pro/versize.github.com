// KOSZYK
let koszyk = JSON.parse(localStorage.getItem('koszyk')) || [];
let aktualnaKategoria = 'all';

// INICJALIZACJA
document.addEventListener('DOMContentLoaded', () => {
    wyswietlProdukty();
    setupEventListeners();
    aktualizujKoszyk();
});

// EVENT LISTENERS
function setupEventListeners() {
    // Kategorie
    document.querySelectorAll('.nav-menu a').forEach(link => {
        link.addEventListener('click', (e) => {
            e.preventDefault();
            document.querySelectorAll('.nav-menu a').forEach(l => l.classList.remove('active'));
            e.target.classList.add('active');
            aktualnaKategoria = e.target.dataset.category;
            document.getElementById('current-category').textContent = e.target.textContent;
            wyswietlProdukty();
        });
    });

    // Sortowanie
    document.getElementById('sort-select').addEventListener('change', (e) => {
        sortujProdukty(e.target.value);
    });

    // Koszyk modal
    document.getElementById('koszyk-btn').addEventListener('click', otworzKoszyk);
    document.querySelector('.close-modal').addEventListener('click', zamknijModale);
    document.querySelector('.modal-overlay').addEventListener('click', zamknijModale);

    // Checkout
    document.querySelector('.btn-checkout').addEventListener('click', finalizuj);
    document.querySelector('.btn-continue').addEventListener('click', zamknijModale);
}

// WY≈öWIETLANIE PRODUKT√ìW
function wyswietlProdukty() {
    const grid = document.getElementById('produkty-grid');
    let produktyDoWyswietlenia = aktualnaKategoria === 'all' 
        ? produkty 
        : produkty.filter(p => p.kategoria === aktualnaKategoria || (aktualnaKategoria === 'nowa-kolekcja' && p.nowa));
    
    document.getElementById('product-count').textContent = produktyDoWyswietlenia.length;
    
    grid.innerHTML = produktyDoWyswietlenia.map(produkt => `
        <div class="produkt-card">
            <div class="produkt-image-wrapper">
                ${produkt.nowa ? '<div class="produkt-badge">NOWO≈öƒÜ</div>' : ''}
                <img src="${produkt.img}" alt="${produkt.nazwa}" class="produkt-img">
                <img src="${produkt.imgHover}" alt="${produkt.nazwa}" class="produkt-img-hover">
                <div class="produkt-actions">
                    <button class="btn-dodaj" onclick="dodajDoKoszyka(${produkt.id})">
                        DODAJ DO KOSZYKA
                    </button>
                </div>
            </div>
            <div class="produkt-info">
                <h3 class="produkt-nazwa">${produkt.nazwa}</h3>
                <p class="produkt-opis">${produkt.opis}</p>
                <p class="produkt-cena">${produkt.cena.toFixed(2)} PLN</p>
            </div>
        </div>
    `).join('');
}

// SORTOWANIE
function sortujProdukty(typ) {
    let posortowane = [...produkty];
    
    switch(typ) {
        case 'price-asc':
            posortowane.sort((a, b) => a.cena - b.cena);
            break;
        case 'price-desc':
            posortowane.sort((a, b) => b.cena - a.cena);
            break;
        case 'newest':
            posortowane.sort((a, b) => b.nowa - a.nowa);
            break;
    }
    
    produkty.splice(0, produkty.length, ...posortowane);
    wyswietlProdukty();
}

// DODAJ DO KOSZYKA
function dodajDoKoszyka(id) {
    const produkt = produkty.find(p => p.id === id);
    const istniejacy = koszyk.find(item => item.id === id);
    
    if (istniejacy) {
        istniejacy.ilosc++;
    } else {
        koszyk.push({ ...produkt, ilosc: 1 });
    }
    
    zapiszKoszyk();
    aktualizujKoszyk();
    
    // Animacja
    const btn = event.target;
    const originalText = btn.textContent;
    btn.textContent = '‚úì DODANO';
    setTimeout(() => {
        btn.textContent = originalText;
    }, 1500);
}

// AKTUALIZUJ KOSZYK
function aktualizujKoszyk() {
    const licznik = koszyk.reduce((sum, item) => sum + item.ilosc, 0);
    document.getElementById('koszyk-licznik').textContent = licznik;
    document.getElementById('items-count').textContent = licznik;
    
    wyswietlKoszyk();
}

// WY≈öWIETL KOSZYK
function wyswietlKoszyk() {
    const lista = document.getElementById('koszyk-items');
    
    if (koszyk.length === 0) {
        lista.innerHTML = '<p style="text-align:center;padding:40px;color:#888">Tw√≥j koszyk jest pusty</p>';
        document.getElementById('subtotal').textContent = '0.00 PLN';
        document.getElementById('total').textContent = '0.00 PLN';
        return;
    }
    
    lista.innerHTML = koszyk.map(item => `
        <div class="koszyk-item">
            <img src="${item.img}" class="koszyk-item-img" alt="${item.nazwa}">
            <div class="koszyk-item-info">
                <h4>${item.nazwa}</h4>
                <p>${item.opis}</p>
                <p>${item.cena.toFixed(2)} PLN</p>
                <div class="koszyk-controls">
                    <button class="btn-qty" onclick="zmienIlosc(${item.id}, -1)">-</button>
                    <span>${item.ilosc}</span>
                    <button class="btn-qty" onclick="zmienIlosc(${item.id}, 1)">+</button>
                    <button class="btn-remove" onclick="usun(${item.id})">Usu≈Ñ</button>
                </div>
            </div>
        </div>
    `).join('');
    
    const suma = koszyk.reduce((total, item) => total + (item.cena * item.ilosc), 0);
    document.getElementById('subtotal').textContent = suma.toFixed(2) + ' PLN';
    document.getElementById('total').textContent = suma.toFixed(2) + ' PLN';
}

// ZMIE≈É ILO≈öƒÜ
function zmienIlosc(id, zmiana) {
    const item = koszyk.find(i => i.id === id);
    if (item) {
        item.ilosc += zmiana;
        if (item.ilosc <= 0) {
            usun(id);
        } else {
            zapiszKoszyk();
            aktualizujKoszyk();
        }
    }
}

// USU≈É
function usun(id) {
    koszyk = koszyk.filter(item => item.id !== id);
    zapiszKoszyk();
    aktualizujKoszyk();
}

// OTW√ìRZ KOSZYK
function otworzKoszyk() {
    document.getElementById('koszyk-modal').classList.add('active');
}

// ZAMKNIJ MODALE
function zamknijModale() {
    document.getElementById('koszyk-modal').classList.remove('active');
}

// ZAPISZ
function zapiszKoszyk() {
    localStorage.setItem('koszyk', JSON.stringify(koszyk));
}

// FINALIZACJA
function finalizuj() {
    if (koszyk.length === 0) {
        alert('Koszyk jest pusty!');
        return;
    }
    
    const suma = koszyk.reduce((total, item) => total + (item.cena * item.ilosc), 0);
    alert(`DZIƒòKUJEMY ZA ZAM√ìWIENIE!\n\nWarto≈õƒá: ${suma.toFixed(2)} PLN\n\nW pe≈Çnej wersji przekierujemy do p≈Çatno≈õci.`);
    
    koszyk = [];
    zapiszKoszyk();
    aktualizujKoszyk();
    zamknijModale();
}
</script>

</body>
</html>
